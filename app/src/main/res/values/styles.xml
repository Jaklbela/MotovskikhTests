<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CasualTextStyle">
        <item name="android:fontFamily">@font/golos</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="PressedTextStyle">
        <item name="android:fontFamily">@font/golos</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/text_pressed</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/text</item>
        <item name="colorSecondary">@color/text_pressed</item>
    </style>

</resources>